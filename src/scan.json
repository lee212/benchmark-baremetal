{
    "cmds": [
        "/usr/bin/hadoop fs -rm -r -skipTrash /Scan/Input", 
        "/usr/bin/hadoop jar /var/lib/hadoop-hdfs/autogen-7.1-SNAPSHOT-jar-with-dependencies.jar HiBench.DataGen -t hive -b /Scan -n Input -m %(mappers)s -r %(reducers)s -p %(pages)s -v %(uservisits)s -o sequence",
	"/usr/bin/hadoop fs -rm -r -skipTrash /Scan/Output", 
	"hive -f ~/rankings_uservisits_scan.hive",
	"spark-submit --class com.intel.hibench.sparkbench.sql.ScalaSparkSQLBench --master yarn-client --num-executors %(executors)s --executor-cores %(e_cores)s --executor-memory %(e_mem)s /var/lib/hadoop-hdfs/sparkbench-assembly-7.1-SNAPSHOT-dist.jar ScalaScan ~/rankings_uservisits_scan.hive"
    ], 
    "size": {
        "bigdata": {
		"mappers": "{{os.environ['B_VAR_VCORES']}}",
		"reducers": "{{os.environ['B_VAR_VCORES']}}",
		"pages": 10000000,
		"uservisits": 2000000000,
		"executors": "{{int(os.environ['B_VAR_VCORES']) * int(os.environ['B_VAR_WORKERS']) / 5.3 // 1}}",
		"e_cores": 5,
		"e_mem": "{{float(os.environ['B_VAR_MEM']) / int(os.environ['B_VAR_VCORES']) * 4.8 // 1}}g"
        }
    }
}
